<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recover Password - Grabzi</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      background: linear-gradient(#fff, #3BB54A);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      background: #fff;
      width: 500px;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0px 5px 20px rgba(0,0,0,0.2);
    }

    .header {
      padding: 20px;
      text-align: left;
      font-size: 26px;
      font-weight: bold;
      color: #3BB54A;
    }

    .recover-box {
      background: linear-gradient(to bottom, #ffffff, #bdf2bd);
      padding: 40px 30px;
      border-radius: 10px;
    }

    .recover-box h2 {
      text-align: center;
      margin-bottom: 25px;
      font-size: 24px;
      font-weight: bold;
    }

    .form-group {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
    }

    .form-group label {
      flex: 1;
      font-weight: bold;
    }

    .form-group input {
      flex: 3;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
      margin-right: 10px;
    }

       .form-group input:focus {
        outline:none;
        border:none;
       }
    .btn-small {
      padding: 10px 15px;
      background: #3BB54A;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: 0.3s;
    }

    .btn-small:hover {
      background: #34a141;
    }

    .verify-btn {
      width: 100%;
      padding: 12px;
      background: #3BB54A;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      margin-top: 10px;
      transition: 0.3s;
    }

    .verify-btn:hover {
      background: #34a141;
    }

    .resend {
      text-align: right;
      margin-top: 10px;
      font-size: 14px;
      color: #3BB54A;
    }

    .resend span {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">Grabzi</div>
    <div class="recover-box">
      <h2>Forgot Password</h2>
      
      <form>
        <!-- Registered Email -->
        <div class="form-group">
          <input type="email" placeholder="Registered Email" required>
          <button type="button" class="btn-small">Get Code</button>
        </div>

        <!-- Enter Code -->
        <div class="form-group">
          <input type="text" placeholder="Enter Code" required>
        </div>

        <button type="submit" class="verify-btn">Verify</button>
      </form>

      <div class="resend">
        Resend Code in <span id="timer">45</span> sec
      </div>
    </div>
  </div>

  <script>
    // Countdown for Resend Code
    let countdown = 45;
    let timer = document.getElementById("timer");
    let interval = setInterval(() => {
      countdown--;
      timer.textContent = countdown;
      if (countdown === 0) {
        clearInterval(interval);
        document.querySelector(".resend").innerHTML = 
          `<a href="#" style="color:#3BB54A; font-weight:bold; text-decoration:none;">Resend Code</a>`;
      }
    }, 1000);
  </script>
</body>
</html>
